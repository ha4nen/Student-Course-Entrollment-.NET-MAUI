<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Project.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Project"
    Shell.FlyoutBehavior="Disabled"
    Title="Project">

    <TabBar>
        <Tab Title="home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"/>
        </Tab>
        <Tab Title="Student" Icon="student.png">
            <ShellContent ContentTemplate="{DataTemplate local:Student}" Route="Student"/>
        </Tab>
        <Tab Title="Course" Icon="course.png">
            <ShellContent ContentTemplate="{DataTemplate local:Course}" Route="Course"/>
        </Tab>
        <Tab Title="Enrollment" Icon="enrollment.png">
            <ShellContent ContentTemplate="{DataTemplate local:Entroll}" Route="Entroll"/>
        </Tab>
    </TabBar>


</Shell>
